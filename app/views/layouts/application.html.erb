<!DOCTYPE html>
<html>
<head>
  <title>NinetyNineCats</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if current_user %>
  <div><%= current_user.username %></div>
  <div><%= button_to "Logout", session_url, method: :delete %></div>
<% else %>
  <div><%= button_to "Login", new_session_url, method: :get %></div>
<% end %>

<%= yield %>

</body>
</html>
