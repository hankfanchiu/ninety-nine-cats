<% username = (user ? user.username : "") %>

<form action="<%= action %>", method="post">
  <table>
    <tr>
      <td>
        <label for="username">Username:</label>
      </td>
      <td>
        <input
          type="text"
          name="<%= input %>[username]"
          id="username"
          value="<%= user.username %>">
      </td>
    </tr>
    <tr>
      <td>
        <label for="password">Password:</label>
      </td>
      <td>
        <input
          type="password"
          name="<%= input %>[password]"
          id="password"
          value = "">
      </td>
    </tr>
  </table>

  <%= button_to button, action, method: :post %>
</form>
