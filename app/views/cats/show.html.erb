<h1><%= @cat.name %></h1>

<table>
  <tr>
    <td>Age:</td>
    <td><%= @cat.age %></td>
  </tr>
  <tr>
    <td>Color:</td>
    <td><%= Cat::COLORS[@cat.color] %></td>
  </tr>
  <tr>
    <td>Sex:</td>
    <td><%= Cat::SEXES[@cat.sex] %></td>
  </tr>
  <tr>
    <td>Description:</td>
    <td><%= @cat.description %></td>
  </tr>
</table>

<h3>Rental Requests</h3>
<table>
  <tr>
    <th>Start Date</th>
    <th>End Date</th>
    <th>Status</th>
  </tr>
  <% @cat.sorted_requests.each do |request| %>
  <tr>
    <td>
      <%= request.start_date %>
    </td>
    <td>
      <%= request.end_date %>
    </td>
    <td>
      <%= request.status.capitalize %>
    </td>
    <% if request.pending? %>
    <td>
        <%= button_to "Approve", approve_request_url(request.id) %>
    </td>
    <td>
        <%= button_to "Deny", deny_request_url(request.id) %>
    </td>
    <% end %>
  </tr>
  <% end %>
</table>
