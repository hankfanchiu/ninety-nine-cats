<h1>
  <%= @cat.name %>
</h1>

<table>
  <tr>
    <td>Age:</td>
    <td><%= @cat.age %></td>
  </tr>
  <tr>
    <td>Color:</td>
    <td><%= @cat.display_color %></td>
  </tr>
  <tr>
    <td>Sex:</td>
    <td><%= @cat.display_sex %></td>
  </tr>
  <tr>
    <td>Description:</td>
    <td><%= @cat.description %></td>
  </tr>
</table>

<h3>Rental Requests</h3>
<table>
  <th>Start Date:</th>
  <th>&nbsp;&nbsp;&nbsp;</th>
  <th>End Date:</th>
  <th>&nbsp;&nbsp;&nbsp;</th>
  <th>Status:</th>
  <% @cat.sorted_requests.each do |request| %>
    <tr>
      <td>
        <%= request.start_date %>
      </td>
      <td></td>
      <td>
        <%= request.end_date %>
      </td>
      <td></td>
      <td>
        <%= request.status.capitalize %>
      </td>
      <% if request.pending? %>
      <td>
          <%= button_to "Approve", request_approve_url(request.id) %>
      </td>
      <td>
          <%= button_to "Deny", request_deny_url(request.id) %>
      </td>
      <% end %>
    </tr>
    <% end %>
</table>
