<h1>
  <%= @cat.name %>
</h1>

<table>
  <tr>
    <td>Age:</td>
    <td><%= @cat.age %></td>
  </tr>
  <tr>
    <td>Color:</td>
    <td><%= @cat.color %></td>
  </tr>
  <tr>
    <td>Sex:</td>
    <td><%= @cat.sex %></td>
  </tr>
  <tr>
    <td>Description:</td>
    <td><%= @cat.description %></td>
  </tr>
</table>

<h3>Rental Requests</h3>
<table>
  <th>Start Date:</th>
  <th>&nbsp;&nbsp;&nbsp;</th>
  <th>End Date:</th>
  <th>&nbsp;&nbsp;&nbsp;</th>
  <th>Status:</th>
  <% @cat.sorted_requests.each do |request| %>
    <tr>
      <td>
        <%= request.start_date %>
      </td>
      <td></td>
      <td>
        <%= request.end_date %>
      </td>
      <td></td>
      <td>
        <%= request.status %>
      </td>
      <td>
        <% if request.status == 'PENDING' %>
          <%= button_to "Approve", cat_rental_request_approve_url(request.cat_id) %>
          <%= button_to "Denied", cat_rental_request_deny_url(request.cat_id) %>
        <% end %>
      </td>
    </tr>
    <% end %>
</table>
